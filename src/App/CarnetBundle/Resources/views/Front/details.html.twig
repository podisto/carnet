{% extends "::base.html.twig" %}

{% block body %}
   <div class="container">
       <div class="row">
           <div class="col-md-9">
               <div class="panel panel-success">
                   <div class="panel-heading">
                       <h3 class="panel-title">Name</h3>
                   </div>
                   <div class="panel-body">
                       <table class="table table-responsive">
                           <tr>
                               <td>Nom</td>
                               <td>{{ contact.name }}</td>
                           </tr>
                           <tr>
                               <td>Email</td>
                               <td>{{ contact.email }}</td>
                           </tr>
                           <tr>
                               <td>Address</td>
                               <td>{{ contact.address }}</td>
                           </tr>
                           <tr>
                               <td>Phone number</td>
                               <td>{{ contact.phone }}</td>
                           </tr>
                           <tr>
                               <td>Website link</td>
                               <td><a href="{{ contact.website }}" target="_blank">{{ contact.website }}</a></td>
                           </tr>
                       </table>
                   </div>
               </div>
           </div>
           {% include '@Carnet/Front/sidebar.html.twig' %}
       </div>
   </div>
{% endblock %}
