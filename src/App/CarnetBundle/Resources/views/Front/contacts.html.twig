{% extends "::base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <h1>Mes contacts</h1>
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <td>Name</td>
                        <td>Address</td>
                        <td>Phone</td>
                        <td>Actions</td>
                    </tr>
                    </thead>
                    <tbody>
                    {% if contacts|length != 0 %}
                        {% for contact in contacts %}
                            <tr>
                                <td>{{ contact.name }}</td>
                                <td>{{ contact.address }}</td>
                                <td>{{ contact.phone }}</td>
                                <td>
                                    <a href="{{ path('carnet_detail', {'id' : contact.id }) }}" class="btn btn-success">Voir</a>
                                    <a href="" class="btn btn-primary">Editer</a>
                                </td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <div class="alert alert-warning">
                            <p>Vous n'avez pas encore de contacts.</p>
                        </div>
                    {% endif %}
                    </tbody>
                </table>
            </div>
            {% include '@Carnet/Front/sidebar.html.twig' %}
        </div>

    </div>
{% endblock %}