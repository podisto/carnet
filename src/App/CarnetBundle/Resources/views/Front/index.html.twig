{% extends "::base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                {% if app.user is not null %}
                    {% for message in app.session.flashbag.get('success') %}
                        <div class="alert alert-success">{{ message }}</div>
                    {% endfor %}
                    <h1>Mes contacts</h1>
                    {% if contacts|length != 0 %}
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <td>Name</td>
                                <td>Address</td>
                                <td>Phone</td>
                                <td>Actions</td>
                            </tr>
                            </thead>
                            <tbody>

                            {% for contact in contacts %}
                                <tr>
                                    <td>{{ contact.name }}</td>
                                    <td>{{ contact.address }}</td>
                                    <td>{{ contact.phone }}</td>
                                    <td>
                                        <a href="{{ path('carnet_detail', {'id' : contact.id }) }}" class="btn btn-success">Voir</a>
                                        <a href="{{ path('carnet_edit', {'id' : contact.id }) }}" class="btn btn-primary">Editer</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}
                {% endif %}
            </div>
            {% include '@Carnet/Front/sidebar.html.twig' %}
        </div>
    </div>
{% endblock %}