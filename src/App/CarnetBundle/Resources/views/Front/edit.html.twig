{% extends "::base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <h1>Ajouter un contact</h1>
                <form action="{{ path('carnet_edit', { 'id' : contact.id }) }}" method="post">
                    <div class="form-group">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.address) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.phone) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.website) }}
                    </div>
                    {{ form_rest(form) }}
                    <br>
                    <div class="form-group">
                        <input type="submit" value="Modifier" class="btn btn-warning">
                    </div>
                </form>
            </div>
            {% include '@Carnet/Front/sidebar.html.twig' %}
        </div>
    </div>
{% endblock %}